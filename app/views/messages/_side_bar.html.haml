.SideBar
  .LeftHeader
    .LeftHeader__list
      .LeftHeader__userName
        = current_user.name
      %ul.LeftHeader__iconList
        %li.LeftHeader__icon
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.LeftHeader__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message